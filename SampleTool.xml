<Tool>
	<!-- The Tool's Name-->
	<!-- Ex: Nikto-->
	<Name> </Name>
	
	<!-- The Tool's Description-->
	<!-- Ex: Web Server Scanner-->
	<Description> </Description>
	
	<!-- The Path to the Tool-->
	<!-- Ex: C://Users/User1/Dowloads/Nikto -->
	<Path></Path>
	
	<!--Semicolon - separated options for the tool-->
	<!-- Ex: -ssl; -nointeractive; -->
	<Options></Options>
	
	<!--Semicolon-separated output specifications for the tool-->
	<!-- Ex: <port>; <ports>; -->
	<OutputSpec> </OutputSpec>
	
	<!--For every tool dependency-->
	<Dependency>
	    <!--The dependencies condition-->
		<!--Can be AND, OR, NOR, NAND -->
	    <Condition> </Condition>
		<!-- Name of the Tool that it depends on -->
		<!-- Ex: Nmap -->
		<ToolName> <ToolName>
		
		<!-- The Output that will be used -->
		<!-- Ex: port -->
		<OutputSpec> </OutputSpec>
		
		<!-- The Path from the Output specification to the data we will compare to. If the data is an attribute, specify it with a .attributeName-->
		<!--*** The field must be atomic and only have one value. List operations are not supported ***-->
		<!-- Ex: /port/state.state-->
		<FieldPath> </FieldPath>
		
		<!-- The operator to use when comparing(<=, ==, >=, <, >)   *FieldPath  OPERATOR VALUE*-->
		<!-- Ex: == -->
		<Operator> <Operator>
		
		<!--The value to compare to -->
		<!-- Ex: open -->
		<Value> </Value>
		
		
	</Dependency>

</Tool>